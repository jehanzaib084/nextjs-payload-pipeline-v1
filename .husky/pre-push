#!/bin/bash

# Skip validation for branch deletions
if echo "$*" | grep -q -- "--delete\|--d"; then
    echo "⏭️  Skipping pre-push validation for branch deletion"
    exit 0
fi

echo "🚀 Pre-push validation..."

# Run type check only (fast validation)
echo "🔍 Type checking..."
pnpm type-check

echo "✅ Pre-push validation complete!"
